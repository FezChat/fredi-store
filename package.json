{
  "name": "fredi-ezra-real-time-backend",
  "version": "1.0.0",
  "description": "Real-time backend with authentication, WebSockets, and MongoDB",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "test": "NODE_ENV=test jest --forceExit --detectOpenHandles",
    "migrate": "node migrations/001-initial-schema.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "multer": "^1.4.5",
    "multer-gridfs-storage": "^5.0.2",
    "redis": "^4.6.7",
    "socket.io-redis": "^6.1.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "socket.io-client": "^4.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "keywords": [
    "real-time",
    "websockets",
    "mongodb",
    "authentication",
    "nodejs"
  ],
  "author": "Fredi Ezra Dev",
  "license": "MIT"
}
